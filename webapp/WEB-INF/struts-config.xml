<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
        "http://struts.apache.org/dtds/struts-config_1_3.dtd">
<struts-config>
	<form-beans>
		<form-bean name="user" type="form.UserForm"></form-bean>
		<form-bean name="student" type="form.StudentForm"></form-bean>
	</form-beans>
	<action-mappings>

<!-- Login for admin -->
		<action path="/login" name="user" type="action.UserAction"
			parameter="login">
			<forward name="loginsuccess" path="/loginsuccess.jsp" />
			<forward name="loginfail" path="/loginfail.jsp" />
		</action>
<!-- Login for Student -->
		<action path="/loginst" name="student" type="action.UserAction"
			parameter="loginSt">
			<forward name="loginsuccessStudent" path="/loginsuccessStudent.jsp" />
			<forward name="loginfailStudent" path="/loginfailStudent.jsp" />
		</action>
<!-- Admin tao them tai khoan: co the la Student hoac Admin -->
		<action path="/createUser" name="user" type="action.UserAction"
			parameter="createUser">
			<forward name="createsuccess" path="/createsuccess.jsp" />
			<forward name="createfail" path="/createfail.jsp" />
		</action>
		
<!-- Admin tao them tai khoan Student -->
		<action path="/addStudent" name="student"
			type="action.UserAction" parameter="add">
			<forward name="addsuccess" path="/addsuccess.jsp" />
			<forward name="addfail" path="/addfail.jsp" />
		</action>
<!-- Admin in ra toan bo danh sach Student -->
		<action path="/showList" name="student"
			type="action.UserAction" parameter="showList">
			<forward name="showlist" path="/showlist.jsp" />
		</action>
		
<!-- In ra thong tin cua 1 Student -->		
		<action path="/showStudent" name="student"
			type="action.UserAction" parameter="showStudent">
			<forward name="showstudent" path="/showstudent.jsp" />
		</action>
		
		<action path="/changepass" name="student"
			type="action.UserAction" parameter="changePassword">
			<forward name="chagesuccess" path="/loginsuccessStudent.jsp" />
		</action>
		
		<action path="/delete" name="student"
			type="action.UserAction" parameter="Delete">
			<forward name="delete" path="/loginsuccess.jsp" />
		</action>
	</action-mappings>

</struts-config>